@model IEnumerable<OrderStatistics.Models.Refunded>

@{
    ViewBag.Title = "Refunded Statistics";
}

<h2>Refunded Statistics</h2>

<p>
    @Html.ActionLink("Create New", "Create", "RefundedStatistics", null, new { @class = "navigate-links" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WeekId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalQuantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalDamagedUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCost)
        </th>
        <th></th>
    </tr>

    @if (Model == null)
    {
        <span>no items found</span>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.WeekId)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TotalQuantity)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TotalDamagedUnit)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TotalCost)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "RefundedStatistics", new { id = item.Id }, new { @class = "navigate-links" }) |
                    @Html.ActionLink("Details", "Details", "RefundedStatistics", new { id = item.Id }, new { @class = "navigate-links" }) |
                    @Html.ActionLink("Delete", "Delete", "RefundedStatistics", new { id = item.Id }, new { @class = "navigate-links" })
                </td>
            </tr>
        }
    }
</table>

<div>
    @Html.ActionLink("Back to Home Page", "Index", "Home", null, new { @class = "navigate-links" })
</div>