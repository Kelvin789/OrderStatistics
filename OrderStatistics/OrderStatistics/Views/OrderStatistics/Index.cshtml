@model IEnumerable<OrderStatistics.Models.Order>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create", "OrderStatistics", null, new { @class = "navigate-links" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WeekId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrdersPlaced)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrdersAuthorised)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalSales)
        </th>
        <th></th>
    </tr>

    @if (Model == null)
    {
        <span>no items found</span>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.WeekId)
                </td>
                <td>
                    @Html.DisplayFor(m => item.OrdersPlaced)
                </td>
                <td>
                    @Html.DisplayFor(m => item.OrdersAuthorised)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TotalSales)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "OrderStatistics", new { id = item.Id }, new { @class = "navigate-links" }) |
                    @Html.ActionLink("Details", "Details", "OrderStatistics", new { id = item.Id }, new { @class = "navigate-links" }) |
                    @Html.ActionLink("Delete", "Delete", "OrderStatistics", new { id = item.Id }, new { @class = "navigate-links" })
                </td>
            </tr>
        }
    }
</table>

<div>
    @Html.ActionLink("Back to Home Page", "Index", "Home", null, new { @class = "navigate-links" })
</div>