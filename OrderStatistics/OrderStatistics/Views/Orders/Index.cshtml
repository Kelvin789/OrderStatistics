@model IEnumerable<OrderStatistics.Models.Orders>

@{
    ViewBag.Title = "Orders";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WeekID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrdersPlaced)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrdersAuthorised)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalSales)
        </th>
        <th></th>
    </tr>

    @if (Model == null)
    {
        <span>no items found</span>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.WeekID)
                </td>
                <td>
                    @Html.DisplayFor(m => item.OrdersPlaced)
                </td>
                <td>
                    @Html.DisplayFor(m => item.OrdersAuthorised)
                </td>
                <td>
                    @Html.DisplayFor(m => item.TotalSales)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }
    }
</table>
